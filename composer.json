{
    "name": "neocode/fne-client",
    "description": "SDK PHP framework-agnostic pour l'intégration de l'API FNE (Facture Normalisée Électronique) - Version 1.0.0",
    "type": "library",
    "keywords": [
        "fne",
        "facture",
        "electronique",
        "ivoire",
        "cote-divoire",
        "api",
        "sdk"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Neocode",
            "email": "contact@neocode.ci"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-client": "^1.0 || ^2.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "psr/simple-cache": "^1.0 || ^2.0 || ^3.0",
        "laravel/prompts": "^0.1 || ^0.2 || ^0.3",
        "laravel/pennant": "^1.0 || ^2.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.0 || ^8.0",
        "laravel/pint": "^1.0",
        "pestphp/pest": "^2.0 || ^3.0",
        "phpstan/phpstan": "^1.0 || ^2.0"
    },
    "suggest": {
        "illuminate/support": "^11.0 Required for Laravel integration",
        "illuminate/http": "^11.0 Required for Laravel HTTP Client",
        "guzzlehttp/guzzle": "^7.0 Required for HTTP client if Laravel HTTP is not available",
        "symfony/cache": "^7.4 Optional for Symfony cache integration",
        "symfony/http-client": "^7.4 Optional for Symfony HTTP client",
        "symfony/yaml": "^7.4 Required for Symfony configuration file generation",
        "symfony/console": "^7.4 Required for Symfony commands"
    },
    "bin": [
        "bin/fne-install"
    ],
    "autoload": {
        "psr-4": {
            "Neocode\\FNE\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Neocode\\FNE\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "analyse": "phpstan analyse",
        "format": "pint",
        "post-install-cmd": [
            "@php -r \"if (file_exists(__DIR__ . '/vendor/autoload.php')) { require __DIR__ . '/vendor/autoload.php'; try { \\Neocode\\FNE\\Install\\FrameworkDetector::detectAndDisplay(); } catch (\\Throwable \$e) { /* Ignore errors during install */ } }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists(__DIR__ . '/vendor/autoload.php')) { require __DIR__ . '/vendor/autoload.php'; try { \\Neocode\\FNE\\Install\\FrameworkDetector::detectAndDisplay(); } catch (\\Throwable \$e) { /* Ignore errors during update */ } }\""
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Neocode\\FNE\\Providers\\FNEServiceProvider"
            ],
            "aliases": {
                "FNE": "Neocode\\FNE\\Facades\\FNE"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
